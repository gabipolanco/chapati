          <a id="login-btn" class="nav-link" href="#">Log In</a>
        </li>
        {{/if}}
      </ul>
    </div>
  </div>
</nav>

<div id="login-pop-up">
  <h1>Login</h1>

  <form action="/auth/login" method="post">
    <label for="email">Email:
      <input type="email" name="email" id="email">
    </label>
    <br>
    <label for="password">Password:
      <input type="password" name="password" id="password">
    </label>
    <br>
    {{#if errorMessage}}
    <div class="error-message">{{errorMessage}}</div>
    {{/if}}
    <button type="submit">Log in</button>

    <p> - or -</p>
    <a href="/auth/google"><img src="images/btn_google_signin_dark_normal_web.png" alt=""></a>
    <br>
    <a href="/auth/facebook"><div class="fb-login-button" data-size="medium" data-button-type="login_with" data-layout="rounded" data-auto-logout-link="false" data-use-continue-as="false" data-width=""></div></a>

  </form>
</div>

{{{body}}}

    <script src="/javascripts/script.js"></script>

</body>
</html>