<main id="places-page">

  <div class="container  inner-page container-places">
    <h2>Explora las comunidades</h2>
    <hr>

    <div class="lugares">
    {{#if user}}
    {{#each places}}
      <div class="place-box">
        <div class="image">
          <img src="{{image}}" alt="{{name}}" height="100" width="auto">
        </div>
        <div class="place-content">
          <h3>{{name}}</h3>
          <h4 class="location">{{location}}</h4>
          <a href="#"><small>Ver en el mapa</small></a>
          <p class="help"><span>Tipo de ayuda que necesitamos: </span> 
          {{#each help}}
          {{this}}
          {{/each}}</p>
          <p class="inExchange"><span>Que damos a cambio: </span>{{inExchange}}</p>
          <p class="minStay"><span>Estadia minima: </span>{{minStay}}</p>
          <p class="availability"><span>Disponibilidad: </span>
          {{#each availability}}
          {{this}}, 
          {{/each}}</p>
          <p class="description">{{description}}</p>
        </div>
        
        <div class="botones">
            <a href="mailto:{{contact}}"><button class="btn-delineado">Contactar host</button></a>
            <a data-toggle="tooltip" data-placement="left" title="Agregar a favoritos" class="favorite-btn" href="/private/favorites/{{_id}}/add"><i class="fab fa-pagelines"></i></a>
        </div>

      </div>
      {{/each}}

      {{else}}

      {{#each places}}
      <div class="place-box">
        <div class="image">
          <img src="{{image}}" alt="{{name}}" height="100" width="auto">
        </div>
        <div class="place-content">
          <h3>{{name}}</h3>
          <h4 class="location">{{location}}</h4>
          <a href="#"><small>Ver en el mapa</small></a>
          <p class="description">{{description}}</p>
        </div>
        
          <a href="/auth/signupbackpacker"><button class="btn-delineado">Log-in para m√°s info</button></a>
  
     
      </div>
      {{/each}}

       {{/if}}
    </div>  

  </div>
</main>