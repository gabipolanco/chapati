<div class="container" id="sign-up">
  <h1>Signup</h1>

  <form action="/auth/signup" method="post">
    <label for="emailSU">Email:
      <input type="email" name="email" id="emailSU">
    </label>
    <br>
    <label for="passwordSU">Password:
      <input type="password" name="password" id="passwordSU">
    </label>
    <input type="text" name="role" value="{{role}}" hidden>
    <br>
    {{#if errorMessage}}
    <div class="error-message">{{errorMessage}}</div>
    {{/if}}
    <button type="submit">Signup as {{role}}</button>

    <p> - or -</p>

    <a href="/auth/google">Signup With Google</a>
    <a href="/auth/facebook">Signup With Facebook</a>

    

  </form>
</div>