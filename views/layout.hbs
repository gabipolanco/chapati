        <a href="/store" id="tienda">TIENDA</a>
      </div>
      <div style="margin-left:120px;"></div>

    
  <div class="container">
    <a class="navbar-brand" href="/">Chapati</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        {{#if user}}
        <li class="nav-item">
          <a class="nav-link" href="/private/mycart">Cart</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/private/profile">Profile</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/auth/logout">Log out</a>
        </li>
        
        {{else}}
  
        <li class="nav-item active">
          <a class="nav-link" href="/auth/signupbackpacker">Unite como mochilerx</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/auth/signuphost">Unite como comunidad</a>
